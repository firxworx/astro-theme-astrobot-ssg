---
import { cn } from '@helpers/style'
import type { HTMLAttributes } from 'astro/types'

/**
 * Hamburger menu icon as Astro component.
 * Adapted from [HeroIcons](https://heroicons.com/) source (MIT license).
 */
export interface Props extends HTMLAttributes<'svg'> {
  class?: string
}

const { class: className, ...restProps } = Astro.props
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  fill="none"
  viewBox="0 0 24 24"
  stroke-width={1.5}
  stroke="currentColor"
  class={cn('w-6 h-6', className)}
  {...restProps}
>
  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12"></path>
</svg>
